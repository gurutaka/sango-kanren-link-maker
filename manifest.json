{
  "manifest_version": 2,
  "name": "SNAGO 関連リンク メーカー",
  "version": "1.0",

  "description": "",
  "icons": {
    "48": "icon/icon48.png"
  },
  "permissions": ["clipboardRead", "tabs"],
  "browser_action": {
    "default_icon": {
      "48": "icon/icon48.png"
    },
    "default_title": "SNAGO 関連リンク メーカー"
  },
  "background": {
    "scripts": ["js/jquery-3.2.1.min.js", "js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/jquery-3.2.1.min.js", "js/main.js"]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}
